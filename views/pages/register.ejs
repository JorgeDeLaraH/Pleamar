<%- include('../partials/head');%>

    <body>
        <%- include('../partials/navbar_b');%>
            <br>
            <div class="global-container">
                <div class="container w-75 bg-muted mt-5 mb-5 rounded shadow">
                    <div class="row aling-items-stretch">
                        <div class="col bg d-none d-lg-block col-md-5 col-lg-5 col-xl-6 rounded">
                        </div>
                        <div class="col bg-white p-5 rounded-end">
                            <div class="text-center">
                                <img src="assets/logo.png" height="65" width="65" alt="">
                            </div>
                            <h2 class="fw-bold text-center py-5">Registro</h2>
                            <form action="#">
                                <div class="mb-4">
                                    <label for="email" calls="form-label">Email</label>
                                    <input type="email" class="form-control" id="email">
                                </div>
                                <div class="mb-4">
                                    <label for="text" calls="form-label">Nombre de Usuario</label>
                                    <input type="text" class="form-control" id="user">
                                </div>
                                <div class="mb-4">
                                    <label for="password" calls="form-label">Contraseña</label>
                                    <input type="password" class="form-control" id="password" maxlength="16" minlength="8">
                                </div>
                                <div class="d-grid">
                                    <button type="button" class="btn btn-primary" onclick="addUser()">Registrarse</button>
                                </div>
                                <div class="my-3">
                                    <span>Ya tienes cuenta? <a href="/login">Iniciar Sesión</a></span><br>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <br>
            <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
            <script>
                function addUser() {
                    var producto = {};
                    producto.email = document.getElementById("email").value;
                    producto.login = document.getElementById("user").value;
                    producto.password = document.getElementById("password").value;

                    axios.post("http://localhost:5000/nuevoUser", producto)
                        .then((response) => {
                            alert("Cuenta Creada");
                            console.log("Insertado Exitosamente");
                        })
                        .catch((error) => {
                            alert("Hubo un error intentalo mas tarde");
                            console.log(error)

                        });
                }
            </script>

    </body>
    <%- include('../partials/footer_p');%>

        </html>