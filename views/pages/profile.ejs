<%- include('../partials/head');%>

    <body onload="usuario()">
        <%- include('../partials/navbar_dash');%>
            <div class="global-container">
                <div class="container w-75 bg-muted mt-5 rounded shadow">
                    <div class="row aling-items-stretch">
                        <div class="col bg2 d-none d-lg-block col-md-5 col-lg-5 col-xl-6 rounded">
                        </div>
                        <div class="col bg-white p-5 rounded-end" id="nombrecito">

                        </div>
                    </div>
                </div>
            </div>
            <%- include('../partials/footer_d');%>
                <script src="https://unpkg.com/ionicons@4.5.10-0/dist/ionicons.js"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
                <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
                <script src="https://releases.jquery.com/git/jquery-3.x-git.js"></script>
                <script>
                    function checkToken() {
                        console.log("Hola desde check");
                        request = {};
                        request.token = sessionStorage.getItem('tToken');
                        request.email = sessionStorage.getItem('emailt');
                        console.log(request);

                        axios.post("http://localhost:5000/auth", request)
                            .then((response) => {
                                console.log("Post call");
                            })
                            .catch((error) => {
                                alert("Sesi√≥n expirada");
                                console.log(error);
                                window.location.href = "/login";
                            })
                    }
                    checkToken();

                    function usuario() {
                        name = sessionStorage.getItem('namet');
                        email = sessionStorage.getItem('emailt');
                        sesion = document.getElementById('nombrecito');
                        var divimg = document.createElement('div');
                        divimg.className = "text-center py-3";
                        var img = document.createElement('img');
                        img.src = "assets/avatar.png";
                        img.height = "65";
                        img.width = "65";
                        img.alt = "logo";
                        var h2 = document.createElement('h2');
                        h2.textContent = name;
                        h2.className = "text-center mb-3";
                        var hr = document.createElement('hr');
                        var div2 = document.createElement('div');
                        div2.className = "mb-4 text-center";
                        var h2_2 = document.createElement('h2');
                        h2_2.textContent = "Correo:";
                        var div3 = document.createElement('div');
                        div3.className = "mb-2 text-muted";
                        div3.textContent = email;
                        divimg.appendChild(img);
                        sesion.appendChild(divimg);
                        sesion.appendChild(h2);
                        sesion.appendChild(hr);
                        div2.appendChild(h2_2);
                        div2.appendChild(div3);
                        sesion.appendChild(div2);




                    }
                </script>
    </body>